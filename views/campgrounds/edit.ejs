<% include ../partials/header %>

<div class="container d-flex justify-content-center">
	
		<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" class="mt-5 w-50">
			<h1 class="mb-5">Editar <%= campground.name %></h1>
			<div class="form-group row">
				<label class="col-md-2 col-form-label">Nome</label>
				<div class="col-md-10">
					<input required class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-2 col-form-label">Descrição</label>
				<div class="col-md-10">
					<textarea required class="form-control" type="textarea" name="campground[description]"><%= campground.description %></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="image" class="col-md-2 col-form-label">URL da Imagem</label>
				<div class="col-md-10">
					<input required class="form-control" type="text" name="campground[imgURL]" value="<%= campground.imgURL %>">
				</div>
			</div>
			<button class="btn btn-block btn-success p-3"> Enviar </button>
			<a class="btn btn-primary mt-1" href="/campgrounds">Voltar</a>
		</form>
	
</div>

<% include ../partials/footer %>