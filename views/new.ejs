<% include partials/header %>

<div class="container d-flex justify-content-center">
	
		<form action="/campgrounds" method="POST" class="mt-5 vw-50">
			<h1 class="mb-5">Criar Novo Acampamento</h1>
			<div class="form-group row">
				<label class="col-md-2 col-form-label">Nome</label>
				<div class="col-md-10">
					<input required class="form-control" type="text" name="name" placeholder="Nome">
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-2 col-form-label">Descrição</label>
				<div class="col-md-10">
					<textarea required class="form-control" type="textarea" name="desc" placeholder="Descrição"></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="image" class="col-md-2 col-form-label">URL da Imagem</label>
				<div class="col-md-10">
					<input required class="form-control" type="text" name="image" placeholder="URL da Imagem">
				</div>
			</div>
			<button class="btn btn-block btn-success p-3"> Enviar </button>
			<a class="btn btn-primary mt-1" href="/campgrounds">Voltar</a>
		</form>
	
</div>

<% include partials/footer %>