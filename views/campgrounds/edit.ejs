<% include ../partials/header %>

<main role="main" class="container d-flex justify-content-center pb-5">

	<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" class="mt-5 w-50">
		<h1 class="mb-5">Editar <%= campground.name %></h1>
		<div class="form-group row">
			<label class="col-xl-2 col-form-label">Nome</label>
			<div class="col-xl-10">
				<input required class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-xl-2 col-form-label">Descrição</label>
			<div class="col-xl-10">
				<textarea required class="form-control" type="textarea"
					name="campground[description]"><%= campground.description %></textarea>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-xl-2 col-form-label">Preço(R$)</label>
			<div class="col-xl-10">
				<input required class="form-control" type="number" name="price" min="0.00" step="0.10"
					value="<%= campground.price %>">
			</div>
		</div>
		<div class="form-group row">
			<label for="image" class="col-xl-2 col-form-label">URL da Imagem</label>
			<div class="col-xl-10">
				<input required class="form-control" type="text" name="campground[imgURL]"
					value="<%= campground.imgURL %>">
			</div>
		</div>
		<button class="btn btn-block btn-success p-3"> <i
			class="fas fa-check"></i>  </button>
		<a class="btn btn-primary mt-1" href="/campgrounds/<%= campground._id %>"><i class="fas fa-chevron-left"></i></a>
	</form>

</main>

<% include ../partials/footer %>